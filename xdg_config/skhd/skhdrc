#moonlander < hyper - k : yabai -m window --display south; yabai -m display --focus south;

# move window to display in a cycle
normal < shift + lalt - u : $(yabai -m window --display prev; yabai -m display --focus prev) || $(yabai -m window --display last; yabai -m display --focus last)
normal < shift + lalt - o : $(yabai -m window --display next; yabai -m display --focus next) || $(yabai -m window --display first; yabai -m display --focus first)
moonlander < hyper - u : $(yabai -m window --display prev; yabai -m display --focus prev) || $(yabai -m window --display last; yabai -m display --focus last)
moonlander < hyper - o : $(yabai -m window --display next; yabai -m display --focus next) || $(yabai -m window --display first; yabai -m display --focus first)


