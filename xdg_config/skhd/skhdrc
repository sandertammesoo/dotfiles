# ############################################################### #
#                                                                 #
#                          RESIZE WINDOWS                         #
#                                                                 #
# ############################################################### #

# Modifying Window Size
# Balance size of windows
normal < shift + lalt - b : yabai -m space --balance
moonlander < hyper - b : yabai -m space --balance

# toggle window zoom
normal < shift + lalt - t : yabai -m window --toggle zoom-parent
normal < shift + lalt - f : yabai -m window --toggle zoom-fullscreen
moonlander < hyper - t : yabai -m window --toggle zoom-parent
moonlander < hyper - f : yabai -m window --toggle zoom-fullscreen

# float / unfloat window and center on screen
normal < shift + lalt - c : yabai -m window --toggle float --grid 8:8:1:1:6:6
moonlander < hyper - c : yabai -m window --toggle float --grid 8:8:1:1:6:6

# Resize windowsa
normal, moonlander < ctrl + lalt - i : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

normal, moonlander < ctrl + lalt - j : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

normal, moonlander < ctrl + lalt - k : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

normal, moonlander < ctrl + lalt - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# increase window size
normal, moonlander < ctrl + lalt - up : yabai -m window --resize top_left:-40:-40; yabai -m window --resize bottom_right:40:40

# decrease window size
normal, moonlander < ctrl + lalt - down : yabai -m window --resize top_left:40:40; yabai -m window --resize bottom_right:-40:-40


# ############################################################### #
#                                                                 #
#                      CONFIG & OTHER STUFF                       #
#                                                                 #
# ############################################################### #

# Enable / Disable gaps in current workspace
normal < shift + lalt - 0 : yabai -m space --toggle padding; yabai -m space --toggle gap
moonlander < hyper - 0 : yabai -m space --toggle padding; yabai -m space --toggle gap

# Toggle mouse focus mode
normal < shift + lalt - m : [[ $(yabai -m config focus_follows_mouse) = "disabled" ]] && \
    yabai -m config focus_follows_mouse autoraise || \
    yabai -m config focus_follows_mouse off
moonlander < hyper - m : [[ $(yabai -m config focus_follows_mouse) = "disabled" ]] && \
    yabai -m config focus_follows_mouse autoraise || \
    yabai -m config focus_follows_mouse off

# Services
# normal < shift + lalt - q : yabai --stop-service;
# normal < shift + lalt - s : yabai --start-service;
normal < alt - z : yabai --restart-service;
normal < alt - x : $(skhd --restart-service; sketchybar --reload;)
normal < alt - r : sketchybar --reload;
normal < alt - c : brew services restart sketchybar
# moonlander < hyper - q : yabai --stop-service;
# moonlander < hyper - s : yabai --start-service;
moonlander < meh - z : yabai --restart-service;
moonlander < meh - x : $(skhd --restart-service; sketchybar --reload;)
moonlander < meh - r : sketchybar --reload;
moonlander < meh - c : brew services restart sketchybar

normal, moonlander < ctrl + lalt - e : ~/.config/yabai/space_setup.sh;

