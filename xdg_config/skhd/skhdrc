:: default : sketchybar -m --set modal label="NO MODE"
:: normal : sketchybar -m --set modal label="NORMAL"
:: moonlander : sketchybar -m --set modal label="MOONLANDER"

# from 'default' mode, activate other mode
# moonlander, normal < escape ; default
default, normal < lcmd - escape ; moonlander
default, moonlander < lalt - escape ; normal

# from 'test' mode, activate mode 'default'
moonlander < lcmd - escape ; default
normal < lalt - escape ; default

