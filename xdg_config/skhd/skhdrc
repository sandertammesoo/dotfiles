# ##################################### #
#                WINDOWS                #
# ##################################### #

# focus window
normal < lalt - w : yabai -m window --focus north || yabai -m display --focus north
normal < lalt - a : yabai -m window --focus west || yabai -m display --focus west
normal < lalt - s : yabai -m window --focus south || yabai -m display --focus south
normal < lalt - d : yabai -m window --focus east || yabai -m display --focus east
moonlander < meh - w : yabai -m window --focus north || yabai -m display --focus north
moonlander < meh - a : yabai -m window --focus west || yabai -m display --focus west
moonlander < meh - s : yabai -m window --focus south || yabai -m display --focus south
moonlander < meh - d : yabai -m window --focus east || yabai -m display --focus east

# Cycle windows forwards and backwards
normal < lalt - q : yabai -m window --focus prev || yabai -m window --focus last
normal < lalt - e : yabai -m window --focus next || yabai -m window --focus first
moonlander < meh - q : yabai -m window --focus prev || yabai -m window --focus last
moonlander < meh - e : yabai -m window --focus next || yabai -m window --focus first

# Cycle windows forwards and backwards in focused stack only
# normal < lalt - tab : yabai -m window --focus stack.next || yabai -m window --focus stack.first
# moonlander < meh - tab : yabai -m window --focus stack.next || yabai -m window --focus stack.first

# Cycle windows forwards and backwards but stops at ends
# normal < lalt - tab : yabai -m window --focus stack.prev || yabai -m window --focus prev || yabai -m window --focus last
# normal < lalt - tab : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus first
# moonlander < meh - tab : yabai -m window --focus stack.prev || yabai -m window --focus prev || yabai -m window --focus last
# moonlander < meh - tab : yabai -m window --focus stack.next || yabai -m window --focus next || yabai -m window --focus first

# ##################################### #
#                DISPLAYS               #
# ##################################### #

# focus monitor
normal < lalt - i : yabai -m display --focus north
normal < lalt - j : yabai -m display --focus west
normal < lalt - k : yabai -m display --focus south
normal < lalt - l : yabai -m display --focus east
moonlander < meh - i : yabai -m display --focus north
moonlander < meh - j : yabai -m display --focus west
moonlander < meh - k : yabai -m display --focus south
moonlander < meh - l : yabai -m display --focus east

# Cycle monitors forwards and backwards
normal < lalt - u : yabai -m display --focus prev || yabai -m display --focus last
normal < lalt - o : yabai -m display --focus next || yabai -m display --focus first
moonlander < meh - u : yabai -m display --focus prev || yabai -m display --focus last
moonlander < meh - o : yabai -m display --focus next || yabai -m display --focus first

# ##################################### #
#                SPACES                 #
# ##################################### #

# focus to space #
normal < lalt - 1 : yabai -m space --focus 1;
normal < lalt - 2 : yabai -m space --focus 2;
normal < lalt - 3 : yabai -m space --focus 3;
normal < lalt - 4 : yabai -m space --focus 4;
normal < lalt - 5 : yabai -m space --focus 5;
normal < lalt - 6 : yabai -m space --focus 6;
normal < lalt - 7 : yabai -m space --focus 7;
normal < lalt - 8 : yabai -m space --focus 8;
normal < lalt - 9 : yabai -m space --focus 9;
moonlander < meh - 1 : yabai -m space --focus 1;
moonlander < meh - 2 : yabai -m space --focus 2;
moonlander < meh - 3 : yabai -m space --focus 3;
moonlander < meh - 4 : yabai -m space --focus 4;
moonlander < meh - 5 : yabai -m space --focus 5;
moonlander < meh - 6 : yabai -m space --focus 6;
moonlander < meh - 7 : yabai -m space --focus 7;
moonlander < meh - 8 : yabai -m space --focus 8;
moonlander < meh - 9 : yabai -m space --focus 9;

# Focus space of current display. Wrap to the other side space of the current display if the current space is the last space of its display.
normal < lalt - y : ~/.config/yabai/space_cycle_prev.sh;
normal < lalt - p : ~/.config/yabai/space_cycle_next.sh;
moonlander < meh - y : ~/.config/yabai/space_cycle_prev.sh;
moonlander < meh - p : ~/.config/yabai/space_cycle_next.sh;


# ############################################################### #
#                                                                 #
#                           MOVE WINDOWS                          #
#                                                                 #
# ############################################################### #

# ##################################### #
#               ON SCREEN               #
# ##################################### #

# Shortcuts For Moving Windows Around
# Moving windows
normal < shift + lalt - w : yabai -m window --warp north || $(yabai -m window --display north; yabai -m display --focus north)
normal < shift + lalt - a : yabai -m window --warp west || $(yabai -m window --display west; yabai -m display --focus west)
normal < shift + lalt - s : yabai -m window --warp south || $(yabai -m window --display south; yabai -m display --focus south)
normal < shift + lalt - d : yabai -m window --warp east || $(yabai -m window --display east; yabai -m display --focus east)
moonlander < hyper - w : yabai -m window --warp north || $(yabai -m window --display north; yabai -m display --focus north)
moonlander < hyper - a : yabai -m window --warp west || $(yabai -m window --display west; yabai -m display --focus west)
moonlander < hyper - s : yabai -m window --warp south || $(yabai -m window --display south; yabai -m display --focus south)
moonlander < hyper - d : yabai -m window --warp east || $(yabai -m window --display east; yabai -m display --focus east)

# swap windows
normal < shift + lalt - i : yabai -m window --swap north
normal < shift + lalt - j : yabai -m window --swap west
normal < shift + lalt - k : yabai -m window --swap south
normal < shift + lalt - l : yabai -m window --swap east
moonlander < hyper - i : yabai -m window --swap north
moonlander < hyper - j : yabai -m window --swap west
moonlander < hyper - k : yabai -m window --swap south
moonlander < hyper - l : yabai -m window --swap east
#ctrl + lalt - w : yabai -m window --swap north
#ctrl + lalt - a : yabai -m window --swap west
#ctrl + lalt - s : yabai -m window --swap south
#ctrl + lalt - d : yabai -m window --swap east

# Mirror tree axis
normal < shift + lalt - h : yabai -m space --mirror y-axis
normal < shift + lalt - n : yabai -m space --mirror x-axis
moonlander < hyper - h : yabai -m space --mirror y-axis
moonlander < hyper - n : yabai -m space --mirror x-axis

# toggle window split type
normal < shift + lalt - e : yabai -m window --toggle split
moonlander < hyper - e : yabai -m window --toggle split
# Rotate windows clockwise
normal < shift + lalt - r : yabai -m space --rotate 270
moonlander < hyper - r : yabai -m space --rotate 270


